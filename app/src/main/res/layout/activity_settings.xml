<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crill.m7019e_sleepm8.Settings"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    >


    <TextView
        android:id="@+id/sensetivityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensitivity: "
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true" />

        <SeekBar
            android:id="@+id/sensetivitySeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:layout_below="@id/sensetivityText"
             />

    <Button
        android:id="@+id/angry_btn"
        android:text="Save Settings"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_save_settings"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/sensorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sensetivitySeekbar"
        android:ems="10"
        android:text="Sensor Time:"
        android:textAlignment="textStart"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sensetivitySeekbar"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="time"

        android:textAlignment="textEnd"
        android:selectAllOnFocus="true"
        />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_toRightOf="@+id/editText2"
        android:ems="10"
        android:text=":"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText2"
        android:layout_toEndOf="@+id/editText3"
        android:ems="10"
        android:inputType="time"
        android:textAlignment="textStart"
        android:selectAllOnFocus="true"
        />
</RelativeLayout>


