<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crill.m7019e_sleepm8.Settings"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    >
<!--
    android:background="@drawable/ripple_effect"
    android:clickable="true"
    -->


    <TextView
        android:id="@+id/textViewSwipeLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swipe left to snooze"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@color/textOnBackground"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swipe right to stop"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@id/textViewSwipeLeft"
        android:textColor="@color/textOnBackground"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/angry_btn"
        android:text="Save Settings"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_save_settings"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>

